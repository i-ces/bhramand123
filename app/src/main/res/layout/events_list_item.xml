<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="0dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginStart="4dp"
    android:weightSum="100">


        <TextView
            android:id="@+id/events_Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="Jan 25"
            android:layout_marginTop="16sp"
            android:textAlignment="center"
            android:paddingStart="4dp"
            android:textSize="17sp" />

        <LinearLayout
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/events_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="events Headline"
                android:textSize="18sp"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/events_description"
                    android:layout_width="0dp"
                    android:layout_weight="75"
                    android:layout_height="wrap_content"
                    android:text="this is the sample descrip.. tion ... "
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:padding="4sp"/>
                <TextView
                    android:id="@+id/events_list_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:maxLines="1"
                    android:paddingEnd="16sp"
                    android:text="..more"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/events_interest_image"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="15"
            android:padding="4dp"
            app:srcCompat="@drawable/icon_star" />
</LinearLayout>

    </androidx.cardview.widget.CardView>


